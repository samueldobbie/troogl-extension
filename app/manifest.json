{
    "name": "Troogl",
    "version": "0.1",
    "description": "A new way to read the news",
    "manifest_version": 2,

	"background": {
		"scripts": ["background.js"]
	},

    "browser_action": {
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "third-party/jquery-3.5.1.min.js",
                "third-party/jquery.sparkline.js",
                "third-party/jquery-ui.min.js"
            ]
        }
    ],

	"permissions": [
        "activeTab"
    ]
}
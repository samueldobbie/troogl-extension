{
    "name": "Troogl",
    "version": "0.0.1",
    "description": "A new way to read the news",
    "manifest_version": 2,

	"background": {
		"scripts": ["background.js"]
	},

    "browser_action": {
        "default_icon": {
            "16": "images/icon16.png",
            "32": "images/icon32.png",
            "64": "images/icon64.png",
            "128": "images/icon128.png",
            "256": "images/icon256.png"
        }
    },

	"permissions": [
        "activeTab"
    ]
}
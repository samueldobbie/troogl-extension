{
  "manifest_version": 3,
  "name": "Troogl",
  "short_name": "Troogl",
  "version": "1.0.0",
  "description": "A new way to read the news",
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "js": [ "content.js" ],
    "matches": [
      "http://*/*",
      "https://*/*"
    ]
  }],
  "icons": {
    "16": "./assets/icon16.png",
    "32": "./assets/icon32.png",
    "48": "./assets/icon48.png",
    "128": "./assets/icon128.png"
  }
}

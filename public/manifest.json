{
  "manifest_version": 2,
  "name": "Troogl",
  "short_name": "Troogl",
  "version": "1.0.0",
  "description": "A new way to read the news",
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": [ "background.js" ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "js": [ "content.js" ],
    "matches": [
      "http://*/*",
      "https://*/*"
    ]
  }],
  "icons": {
    "16": "./assets/icon-16.png",
    "32": "./assets/icon-32.png",
    "48": "./assets/icon-48.png",
    "128": "./assets/icon-128.png"
  }
}
